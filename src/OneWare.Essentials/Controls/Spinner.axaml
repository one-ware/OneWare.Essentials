<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OneWare.Essentials.Controls.Spinner" Name="SpinnerView">


    <UserControl.Styles>
        <Style Selector="Image.AnimatingIntermediate">
            <Style.Animations>
                <Animation Duration="0:0:2.0" IterationCount="Infinite">
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="Image.AnimatingOnce">
            <Style.Animations>
                <Animation Duration="0:0:2.0">
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>

    <Image Name="SpinnerPresenter" VerticalAlignment="Center" HorizontalAlignment="Center" Classes="AnimatingIntermediate"
           Source="{Binding #SpinnerView.CustomIcon}" />
</UserControl>